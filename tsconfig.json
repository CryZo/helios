{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*",
				"src/Automation/node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}